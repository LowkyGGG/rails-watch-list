<nav class="navbar">
  <div class="container">
    <a class="navbar-brand" href="/lists">
      <%= image_tag 'Wagonflix.png', alt: 'Wagonflix Logo', width: 200 %>
    </a>
    <div class="ml-auto">
      <%= link_to 'New List', new_list_path, class: 'btn btn-outline-danger' %>
    </div>
  </div>
</nav>

<div class="container-card">
  <div class="card-body">
    <h1>Add a Movie</h1>
    <%= simple_form_for [@list, @bookmark] do |f| %>
      <div class="select-movie">
        <%= f.association :movie, as: :select, collection: Movie.all, input_html: { class: 'form-control' }, label: 'Select Movie' %>
        <%= f.input :comment, input_html: { class: 'form-control' }, label: 'Comment' %>
        <%= f.submit 'Add Movie', class: 'btn btn-danger' %>
      </div>
    <% end %>
  </div>
</div>
