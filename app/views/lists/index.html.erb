<nav class="navbar">
  <div class="container">
    <a class="navbar-brand" href="/lists">
      <%= image_tag 'Wagonflix.png', alt: 'Wagonflix Logo', width: 200 %>
    </a>
    <div class="ml-auto">
      <%= link_to 'New List', new_list_path, class: 'btn btn-outline-danger' %>
    </div>
  </div>
</nav>

<div class="main-image">
  <%= image_tag 'salle.avif', alt: 'sieges', class: 'background-image' %>
  <h1>Watch any movie, completely <span class="legally">LEGALLY</span></h1>
  <h5>We hate illegal streaming.</h5>
</div>

<div class="container-page">
  <div class="container-lists">
    <h2 class="inline-lists">My Lists</h2>
    <%= link_to 'Add New List', new_list_path, class: 'btn btn-danger' %>
  </div>

  <hr>

  <div class="row-cards">
    <% @lists.each do |list| %>
      <div class="card-index">
        <% if list.photo.attached? %>
          <%= cl_image_tag list.photo.key, class: 'card-image' %>
        <% else %>
          <%= image_tag 'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTPQDYau3Hs4-xw1i8jVSUY4BlF4FLmg8lQqg&usqp=CAU', class: 'card-image' %>
        <% end %>
        <%= link_to list.name.upcase, list_path(list), class: "name" %>
      </div>
    <% end %>
  </div>
</div>
